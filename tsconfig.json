{
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./packages/*", "./apps/*"]
    },
    "target": "ES2023",
    "lib": ["ES2023"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "skipLibCheck": true
  },
  "files": [],
  "references": [
    { "path": "./packages/bln" },
    { "path": "./apps/bln-cli" },
    { "path": "./apps/konduit-app" }
  ]
}
