{
  "compilerOptions": {
    "target": "ES2023",
    "lib": ["ES2023", "DOM"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "skipLibCheck": true
  },
  "files": [],
  "references": [
    { "path": "./packages/bln" },
    { "path": "./packages/cardano-keys" },
    { "path": "./packages/codec" },
    { "path": "./packages/konduit-consumer" },
    { "path": "./apps/bln-cli" },
    { "path": "./apps/konduit-app" }
  ]
}
